{
  "name": "bandev",
  "version": "1.0.0",
  "private": true,
  "author": "Nicolas Banic <bcnicolaspro@gmail.com>",
  "description": "BANDEV - Développeur Web Freelance | Création de sites web modernes et performants",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "typecheck": "tsc --noEmit",
    "optimize:svg": "svgo -f public/images --multipass --pretty",
    "optimize:images": "node scripts/optimize-images.js",
    "analyze": "cross-env ANALYZE=true next build",
    "validate": "node .zencoder/validate.js",
    "test:all": "npm run lint && npm run typecheck && npm run build",
    "lighthouse": "lhci autorun"
  },
  "dependencies": {
    "framer-motion": "^12.23.22",
    "lightningcss": "^1.28.3",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.63.0",
    "react-intersection-observer": "^9.16.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.4",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "24.6.2",
    "@types/react": "19.2.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "sharp": "^0.33.5",
    "svgo": "^3.3.2",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.3.3"
  }
}
